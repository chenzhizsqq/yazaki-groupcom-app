<!-- 形状 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <solid android:color="#FF5722" />
    <!-- 边框 -->
    <stroke
        android:width="1dip"
        android:color="@color/black" />
    <!-- 内填充颜色 -->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
    <!-- 圆角 -->
    <corners android:radius="0dp" />

</shape>