<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.first.FirstActivity">

    <!-- 中央部 -->
    <androidx.core.widget.NestedScrollView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="?attr/actionBarSize"
        android:orientation="vertical"
        android:gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@color/silvery"
        android:scrollbarSize="5dp"
        android:paddingEnd="5dp"
        android:scrollbars="vertical"
        android:background="@drawable/bg_layout">
        <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white"
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                android:id="@+id/MainActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="MainActivity"/>
            <TextView
                android:id="@+id/RfidLoginActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="RfidLoginActivity"/>
            <TextView
                android:id="@+id/PwLoginActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="PwLoginActivity"/>
            <TextView
                android:id="@+id/CuttingWorkCheckActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="CuttingWorkCheckActivity"/>
            <TextView
                android:id="@+id/CuttingWorkCheckActivity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="CuttingWorkCheckActivity2"/>
            <TextView
                android:id="@+id/TopMenuActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="TopMenuActivity"/>
            <TextView
                android:id="@+id/AcQrLoginActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="AcQrLoginActivity"/>
            <TextView
                android:id="@+id/AcSelectActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="AcSelectActivity"/>
            <TextView
                android:id="@+id/AcUpdateActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="AcUpdateActivity"/>
            <TextView
                android:id="@+id/TestSqlActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="TestSqlActivity"/>
            <TextView
                android:id="@+id/TestRoomDaoActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="TestRoomDaoActivity"/>
            <TextView
                android:id="@+id/CuttingWorkActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="CuttingWorkActivity"/>
            <TextView
                android:id="@+id/TestSmartRefreshLayoutActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="TestSmartRefreshLayoutActivity"/>
            <TextView
                android:id="@+id/TestRetrofitActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="TestRetrofitActivity"/>
            <TextView
                android:id="@+id/TestNfcActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="TestNfcActivity"/>
            <TextView
                android:id="@+id/TestScanServiceActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="TestScanServiceActivity"/>
            <TextView
                android:id="@+id/TestScanActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="UnitechSDK的官方demo：但是暂时说不支持EA520。UnitechSDK_Tester_v1.1.17"/>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ロードのレイアウト-->
    <LinearLayout
        android:id="@+id/ll_progressbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@android:style/Widget.Material.Light.ProgressBar.Inverse" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>