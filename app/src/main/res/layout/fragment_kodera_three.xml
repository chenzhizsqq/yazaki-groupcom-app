<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.kodera.KoderaThreeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- message -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="検査" />

        <!-- tl_data  -->
        <TableLayout
            android:id="@+id/tl_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:showDividers="middle">

            <!-- tr_title  -->
            <TableRow
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="20sp">

                <TextView
                    android:background="@drawable/bg_layout_black_grey"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:layout_weight="3"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:padding="5sp"
                    android:text="項目"/>

                <TextView
                    android:background="@drawable/bg_layout_black_grey"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:layout_weight="2"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:padding="5sp"
                    android:text="下限値"/>

                <TextView
                    android:background="@drawable/bg_layout_black_grey"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:layout_weight="2"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:padding="5sp"
                    android:text="上限値"/>

                <TextView
                    android:background="@drawable/bg_layout_black_grey"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:layout_weight="2"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:padding="5sp"
                    android:text="測定値"/>

                <TextView
                    android:background="@drawable/bg_layout_black_grey"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:layout_weight="2"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:padding="5sp"
                    android:text="判定"/>

            </TableRow>

            <!-- 切断線長  -->
            <TableRow
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="20sp">

                <TextView
                    android:layout_weight="3"
                    android:background="@drawable/bg_layout_black"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="5sp"
                    android:text="切断線長"/>

                <TextView
                    android:background="@drawable/bg_layout_black_grey"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:layout_weight="2"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:padding="5sp"
                    android:text=""/>

                <TextView
                    android:background="@drawable/bg_layout_black_grey"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:layout_weight="2"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:padding="5sp"
                    android:text=""/>

                <EditText
                    android:layout_weight="2"
                    android:background="@drawable/bg_layout_black"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="5sp"
                    android:text="335"/>

                <TextView
                    android:background="@drawable/bg_layout_black_green"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:layout_weight="2"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:padding="5sp"
                    android:text="OK"/>

            </TableRow>

        </TableLayout>


    </LinearLayout>
</FrameLayout>