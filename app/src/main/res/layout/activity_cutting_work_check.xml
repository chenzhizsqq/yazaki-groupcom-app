<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CuttingWorkCheckActivity">

    <!-- タイトル -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/titleAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        >
        <LinearLayout
            android:id="@+id/ll_top"
            android:background="@color/iphone_top_menu_bg"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/returnHome"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingStart="5sp"
                android:orientation="horizontal"
                android:gravity="center|start"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    app:srcCompat="@drawable/ic_launcher_arrow_left_foreground" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/iphone_button_color"
                    android:textSize="20sp"
                    android:text="作業者"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/iphone_button_color"
                    android:textSize="15sp"
                    android:text="ログインID:admin"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|end"
                >
                <TextView
                    android:background="@drawable/ic_round_button_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/button_font_color"
                    android:textSize="10sp"
                    android:text="TOP" />
                <TextView
                    android:background="@drawable/ic_round_button_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/button_font_color"
                    android:textSize="10sp"
                    android:text="ログアウト" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- ll_title -->
    <LinearLayout
        android:id="@+id/ll_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleAppBarLayout"
        android:orientation="horizontal"
        android:gravity="top|start"
        android:layout_width="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:background="@drawable/ic_round_button_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/button_font_color"
            android:textSize="20sp"
            android:layout_margin="1dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="X-02" />

        <TextView
            android:background="@drawable/bg_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="1dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="X-04" />

    </LinearLayout>


    <!-- 中央部 -->
    <androidx.core.widget.NestedScrollView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_title"
        android:orientation="vertical"
        android:gravity="center|top"
        android:layout_width="match_parent"
        android:background="@drawable/bg_layout"
        android:layout_margin="2dp"
        android:layout_height="wrap_content">


        <!-- Main -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_layout"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <!-- Each -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_layout"
                android:orientation="vertical">

                <!-- part a-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_layout"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <!-- part a horizontal-->
                    <LinearLayout
                        android:weightSum="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <!-- part a horizontal part1-->
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="a"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext"
                                android:inputType="text"
                                android:singleLine="true"
                                android:minHeight="20dp"
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                tools:ignore="SpeakableTextPresentCheck" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="b"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext"
                                android:inputType="text"
                                android:singleLine="true"
                                android:minHeight="20dp"
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                tools:ignore="SpeakableTextPresentCheck" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="c"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext"
                                android:inputType="text"
                                android:singleLine="true"
                                android:minHeight="20dp"
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </LinearLayout>

                        <!-- part a horizontal part2-->
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="a"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext"
                                android:inputType="text"
                                android:singleLine="true"
                                android:minHeight="20dp"
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                tools:ignore="SpeakableTextPresentCheck" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="b"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext"
                                android:inputType="text"
                                android:singleLine="true"
                                android:minHeight="20dp"
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                tools:ignore="SpeakableTextPresentCheck" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="c"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext"
                                android:inputType="text"
                                android:singleLine="true"
                                android:minHeight="20dp"
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </LinearLayout>

                        <!-- part a horizontal part3-->
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="a"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext"
                                android:inputType="text"
                                android:singleLine="true"
                                android:minHeight="20dp"
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                tools:ignore="SpeakableTextPresentCheck" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="b"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext"
                                android:inputType="text"
                                android:singleLine="true"
                                android:minHeight="20dp"
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                tools:ignore="SpeakableTextPresentCheck" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:text="c"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext"
                                android:inputType="text"
                                android:singleLine="true"
                                android:minHeight="20dp"
                                android:textSize="10dp"
                                android:textColor="@color/black"
                                tools:ignore="SpeakableTextPresentCheck" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <!-- part b-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_layout"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="b"/>
                </LinearLayout>

                <!-- part c-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_layout"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="c"/>
                </LinearLayout>

                <!-- part d-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center|end"
                    android:orientation="horizontal">

                    <TextView
                        android:background="@drawable/bg_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:inputType="textMultiLine"
                        android:maxLines="2"
                        android:minLines="2"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textSize="10sp"
                        android:text="サンプル品\n完了" />

                    <TextView
                        android:background="@drawable/ic_round_button_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textAlignment="center"
                        android:textColor="@color/button_font_color"
                        android:textSize="20sp"
                        android:layout_margin="1dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="完了" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <!-- Your content here -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:text="2-1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:text="2-2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <!-- Your content here -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:text="3-1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:text="3-2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <!-- Your content here -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:text="4-1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:text="4-2"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>