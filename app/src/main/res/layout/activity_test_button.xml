<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.TestButtonActivity">

    <!-- 中央部 -->
    <androidx.core.widget.NestedScrollView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="?attr/actionBarSize"
        android:orientation="vertical"
        android:gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@color/silvery"
        android:scrollbarSize="5dp"
        android:paddingEnd="5dp"
        android:scrollbars="vertical"
        android:background="@drawable/bg_layout">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white"
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/name"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:text="测试按钮的样式"/>
            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按钮1" />


            <com.yazaki_groupcom.app.base.BaseButton
                style="@style/MyButtonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:bg_color="@color/silvery"
                android:maxLines="2"
                android:minLines="2"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="10sp"
                android:text="サンプル品\n完了"/>
            <com.yazaki_groupcom.app.base.BaseButton
                style="@style/MyButtonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/button_font_color"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="完了" />
            <com.yazaki_groupcom.app.base.BaseButton
                style="@style/MyButtonStyleSmall"
                app:button_state="normal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/testButton1"
                android:text="新样式1"/>
            <com.yazaki_groupcom.app.base.BaseButton
                app:button_state="multiple"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/testButton2"
                android:text="新样式2"/>
            <com.yazaki_groupcom.app.base.BaseButton
                app:button_state="invalid"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/testButton3"
                android:text="新样式3"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>